{
    "hostRequirements": {
        "cpus": 4
    },
    "name": "my-project-devcontainer",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",  // Any generic, debian-based image.
    "workspaceMount": "source=${localWorkspaceFolder}/slides,target=/workspace,type=bind,consistency=cached",
    "workspaceFolder": "/workspace",
    "features": {
        "ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
            "packages": "openssh-client,texlive"
        }
    },
    "waitFor": "onCreateCommand",
    "updateContentCommand": "git submodule update --recursive --init",
    "customizations.codespaces.openFiles": ["slides/slides.tex"],
    "customizations": {
        "vscode": {
            "extensions": [
                "james-yu.latex-workshop"
            ],
            "settings": {
                // General Settings
                "files.eol": "\n",
                "files.autoSave": "onFocusChange",
                "editor.formatOnSave": true,
                // Latex Settings
                "latex-workshop.view.pdf.viewer": "tab",
                "latex-workshop.latex.clean.subfolder.enabled": true,
                "latex-workshop.latex.autoClean.run": "onBuilt",
                "latex-workshop.latex.recipes": [
                    {
                        "name": "latexmk (xelatex)",
                        "tools": [
                            "xelatexmk"
                        ]
                    }
                ],
                "[latex]": {
                    "editor.formatOnPaste": false,
                    "editor.wordWrap": "on",
                    "cSpell.showAutocompleteSuggestions": true,
                    "rewrap.autoWrap.enabled": true
                },
                "languageTool.language": "en",
                "languageTool.enabled": true
            }
        }
    }
}
