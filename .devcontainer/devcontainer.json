{
    "hostRequirements": {
        "cpus": 4
    },
    "name": "latex-dev",
    "image": "ghcr.io/willfantom/devcontainer-latex:latest-small",
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
    "workspaceFolder": "/workspace",
    "features": {
        "ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
            "packages": "openssh-client"
        }
    },
    "postCreateCommand": "git submodule update --recursive --init && tlmgr install textpos multirow tabto-ltx adjustbox enumitem soul environ pythonhighlight keystroke && texhash",
    "customizations.codespaces.openFiles": ["slides/slides.tex"],
    "customizations": {
        "vscode": {
            "extensions": [
                "james-yu.latex-workshop"
            ],
            "settings": {
                // General Settings
                "files.eol": "\n",
                "files.autoSave": "onFocusChange",
                "editor.formatOnSave": true,
                // Latex Settings
                "latex-workshop.view.pdf.viewer": "tab",
                "latex-workshop.latex.clean.subfolder.enabled": true,
                "latex-workshop.latex.autoClean.run": "onBuilt",
                "latex-workshop.latex.recipes": [
                    {
                        "name": "latexmk (xelatex)",
                        "tools": [
                            "xelatexmk"
                        ]
                    }
                ],
                "[latex]": {
                    "editor.formatOnPaste": false,
                    "editor.wordWrap": "on",
                    "cSpell.showAutocompleteSuggestions": true,
                    "rewrap.autoWrap.enabled": true
                },
                "ltex.ltex-ls.path": "/usr/share/ltex-ls",
                "ltex.java.path": "/usr/lib/jvm/default-java",
                "languageTool.language": "en",
                "languageTool.enabled": true
            }
        }
    }
}
