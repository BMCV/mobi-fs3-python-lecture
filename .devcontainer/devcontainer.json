{
    "hostRequirements": {
        "cpus": 4
    },
    "image": "mcr.microsoft.com/devcontainers/typescript-node",
	"forwardPorts": [3000],
	"customizations": {
	},
    "mounts": [
        "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached"
    ],
    "containerEnv": {
        "GIT_SSH_COMMAND": "ssh -o UserKnownHostsFile=/dev/null -o StrictHostKeyChecking=no"
    },
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
    "workspaceFolder": "/workspace",
    "features": {
        "ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
            "packages": "openssh-client"
        }
    },
    "postCreateCommand": "git submodule update --recursive --init",
    "customizations": {
        "codespaces": {
            "openFiles": [
                "slides/slides.tex"
            ]
        },
        "vscode": {
			"extensions": [
				"EdwinKofler.vscode-hyperupcall-pack-core",
				"EdwinKofler.vscode-hyperupcall-pack-latex"
            ],
            "settings": {
                // General Settings
                "files.eol": "\n",
                "files.autoSave": "onFocusChange",
                "editor.formatOnSave": true,
                // Latex Settings
                "latex-workshop.view.pdf.viewer": "tab",
                "latex-workshop.latex.clean.subfolder.enabled": true,
                "latex-workshop.latex.autoClean.run": "onBuilt",
                "latex-workshop.latex.recipes": [
                    {
                        "name": "latexmk (xelatex)",
                        "tools": [
                            "xelatexmk"
                        ]
                    }
                ],
                "[latex]": {
                    "editor.formatOnPaste": false,
                    "editor.wordWrap": "on",
                    "cSpell.showAutocompleteSuggestions": true,
                    "rewrap.autoWrap.enabled": true
                },
                "ltex.ltex-ls.path": "/usr/share/ltex-ls",
                "ltex.java.path": "/usr/lib/jvm/default-java",
                "languageTool.language": "en",
                "languageTool.enabled": true
            }
        }
    }
}
